{% for block in blocks %}
    {% if block.isAsync %}
        {# use hinclude in future #}
        {{render_hinclude(controller('ApplicationCMSBundle:Page:asyncBlock', {'block_id': block.id}))}}
    {% else %}
        {{render(controller('ApplicationCMSBundle:Page:block', {'block': block}))}}
    {% endif %}
{% endfor %}